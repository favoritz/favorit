<!--pages/post/post.wxml-->

<form bindsubmit="formSubmit" >
  <view class="section section_gap">
    <radio-group name="actiontype">
      <label><radio value="sell"/>卖</label>
      <label><radio value="buy"/>买</label>
    </radio-group>
  </view>
  <view>
    <picker bindchange='typeChange' mode='selector' value='{{typeindex}}' range='{{types}}'>
      <view class='picker'>
        类别 : {{types[typeindex]}}
      </view>
    </picker>
  </view>
  <view>
    <picker bindchange='areachange' mode='selector' value='{{areaindex}}' range='{{areas}}'>
      <view class='picker'>
        区域 : {{areas[areaindex]}}
      </view>
    </picker>
  </view>

  <view class="section">
    <input name="title" placeholder="标题" />
    <textarea name='summary' placeholder='简介'></textarea>
  </view>

  <view class='section'>
    <input name='price' placeholder='价格'></input>
  </view>


  <view class="btn-area">
    <button formType="submit">提交</button>
  </view>
</form>