</view>

<view class="menu">
  <view class="menuTitle">
    <image class='circle' src='/img/1.png'></image>
    发布详情
  </view>
  
    <view class='.postTitle'>
      <input style="width:100%;"placeholder='标题：可输入品牌型号等信息，方便用户搜索哦~'></input>
    </view>
    <view class='menuContent' style="min-height:300rpx; margin-bottom:5rpx;" >
      <textarea placeholder='详情：可输入细节描述，越详细越容易被关注哟' ></textarea>
    </view>
    <view class='postTitle' >
      <label>图片:\n</label>
    </view>

    <view class="menuContent">
      <image src='/img/1.png' style='width:250rpx;height:250rpx' bindtap='addimage_click'></image>
      <view wx:for='{{images}}'>
        <image class='choose_image' src='{{item.path}}'></image>
      </view>
    </view>
  
</view>

<view class="menu">
  <view class="menuTitle">
    <text>联系方式</text>
  </view>
  <view class="menuContent">
    <button style="width:100%; height: 100rpx; background-color:white; color: #555555">
      default communication method
    </button>
  </view>
  <view class="menuContent">
    <button style="width:100%; height: 100rpx; background-color:white; color: #555555">
      <input placeholder='phone'></input>
    </button>
  </view>
</view>

<button>submit</button>