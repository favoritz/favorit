<!--pages/post/post.wxml-->
<view class='topbtn'>
  <button style="width:50%; background-color:white;" >出二手</button>
  <button style="width:50%; background-color:white;" >求二手</button>
</view>

  <view class="menuTitle">
    <image class='circle' src=''></image>
    <label class='group_header_title'>发布种类</label>
  </view>
  <view class="menuContent"  wx:for='{{types}}'>
    <view class='type_item'>
      <image wx:if='{{item.selected}}' class='circleSelected' src='' bindtap='type_click' style="width:25%;" id='{{item.index}}'/>
      <image wx:if='{{!item.selected}}' class='circle' src='' bindtap='type_click' id='{{item.index}}'/>
      <view>
        <label>{{item.name}}</label>
      </view>
    </view >
  </view>


<view class= "menu">
  <view class="menuTitle">
    <image class='circle' src='/img/1.png'></image>
    <label class='group_header_title'>选择地点</label>
  </view>
<view class="location">
  <radio-group bindchange="radioChange" >
    <label  wx:for="{{location}}">
        <radio value="{{name}}"></radio>
        <view>{{item.value}}</view>
        <!-- 其他布局代码 -->    
    </label>   
  </radio-group>
</view>
